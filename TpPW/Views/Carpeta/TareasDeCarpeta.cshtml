@model IEnumerable<TpPW.Models.Tarea>

@{
    ViewBag.Title = "TareasDeCarpeta";
    Layout = "~/Views/Shared/_User.cshtml";
}

<h2 class="text-center">Tareas De Carpeta</h2>
<hr />
<h4 class="text-center" style="color:red">@ViewBag.Messege</h4>
<div class="col-lg-10 col-lg-offset-1">
    <table class="table table-bordered text-center">
        <tr class="info">
            <th class="text-center">
                Fecha Fin
            </th>
            <th class="text-center">
                Nombre
            </th>
            <th class="text-center">
                Prioridad
            </th>
            <th class="text-center">
                Estimado
            </th>
            <th class="text-center">
                Completada
            </th>
            <th>

            </th>


        </tr>

        @foreach (var item in Model)

        {

            if (item.FechaCreacion < DateTime.Now)
            {
                @:
                <tr class="bg-danger"></tr>




                @:
                <tr>


                    <td>
                        @Html.DisplayFor(modelItem => item.FechaFin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @switch (item.Prioridad)
                        {
                        case 1:
                        <text>
                            Baja
                        </text>
                        break;
                        case 2:
                        <text>
                            Media
                        </text>
                        break;
                        case 3:
                        <text>
                            Alta
                        </text>
                        break;
                        case 4:
                        <text>
                            Urgente
                        </text>
                        break;
                        default:
                        <text>
                            default
                        </text>
                        break;
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstimadoHoras) Hs
                    </td>
                    <td>
                        @if (item.Completada == 1)
                        {
                            <p>Completada</p>
                        }
                        else
                        {
                            <p>Incompleta</p>
                        }
                        @*@Html.DisplayFor(modelItem => item.Completada)*@
                    </td>
                    <td>
                        @Html.ActionLink("Descripcion", "DescripcionTarea", "Tarea", new { idTar = item.IdTarea }, null)
                    </td>

                </tr>

            }



        }

    </table>
</div>