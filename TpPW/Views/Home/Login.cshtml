@model TpPW.Models.Usuario
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<h4 class="text-center">@ViewBag.Messege</h4>

<div class="col-lg-4 col-lg-offset-4">
    <div class="panel panel-primary">
        <div class="panel-heading">Login</div>
        <div class="panel-body">
            <form action="Login" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", title = "Debe ingresar un email válido" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    @Html.TextBoxFor(m => m.Contrasenia, new { @class = "form-control", type = "password", title = "Debe ingresar una password válida" })
                    @Html.ValidationMessageFor(m => m.Contrasenia)
                </div>
                <label>
                   <input type="checkbox" checked id="Recordarme" name="Recordarme" value="true" runat="server"> Recordame
                </label>
                <br />
                <button type="submit" class="btn btn-primary">Iniciar</button>
                <button type="reset" class="btn btn-default">Cancelar</button>

            </form>
        </div>
    </div>
</div>